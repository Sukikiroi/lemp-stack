{
    "head_version": {
        "type": "header",
        "description": "Setting: "
    },
    "PhpVerion": {
        "type": "radiogroup",
        "default": "7.0",
        "description": "Set php fpm version",
        "options": {
            "php7.1-fpm": "7.0",
            "php7.2-fpm": "7.1",
            "php7.3-fpm": "7.2",
            "php7.4-fpm": "7.3"
        }
    },
    "WebDir": {
        "type": "entry",
        "default": "/var/www/",
        "description": "Web Dir"
    },
    "NginxConf": {
        "type": "entry",
        "default": "/etc/nginx/sites-available/",
        "description": "Nginx Config Dir"
    },
    "WebHost": {
        "type": "entry",
        "default": "http://localhost/",
        "description": "Host Name"
    },
    "head_sound": {
        "type": "header",
        "description": "sound alert"
    },
    "useSoundAlert": {
        "type": "switch",
        "default": true,
        "description": "Emit an audible alert when SERVICE shuts down.",
        "tooltip": "Checking this allows this applet to emit an audible alert when SERVICE shuts down."
    }
}